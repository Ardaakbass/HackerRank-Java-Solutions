import java.util.*;
import java.io.*;

class Node {
    Node left, right;
    int data;
    
    Node(int data) {
        this.data = data;
        left = right = null;
    }
}

public class Solution {

    /**
     * Method to find the height of a Binary Search Tree (BST).
     * Height is defined as the number of edges between the root and the furthest leaf node.
     * * @param root The root node of the binary tree
     * @return The height of the tree (0 for a single node, -1 for empty)
     */
    public static int getHeight(Node root) {
        // Base Case: If the tree is empty, return -1.
        // (So that a single node tree returns -1 + 1 = 0)
        if (root == null) {
            return -1;
        }
        
        // Recursive Step: Calculate height of left and right subtrees
        int leftHeight = getHeight(root.left);
        int rightHeight = getHeight(root.right);
        
        // Return the maximum depth + 1 (for the current edge)
        return Math.max(leftHeight, rightHeight) + 1;
    }

    // Main method to handle input/output (Standard HackerRank boilerplate)
    public static void insert(Node root, int data) {
        if (data <= root.data) {
            if (root.left == null) {
                root.left = new Node(data);
            } else {
                insert(root.left, data);
            }
        } else {
            if (root.right == null) {
                root.right = new Node(data);
            } else {
                insert(root.right, data);
            }
        }
    }

    public static void main(String args[]) {
        Scanner sc = new Scanner(System.in);
        int T = sc.nextInt();
        Node root = null;
        while (T-- > 0) {
            int data = sc.nextInt();
            if (root == null) {
                root = new Node(data);
            } else {
                insert(root, data);
            }
        }
        int height = getHeight(root);
        System.out.println(height);
    }
}
